<idea-plugin>
    <id>org.jetbrains</id>
    <name>Hello Action Project</name>
    <version>0.0.1</version>
    <vendor email="dummy" url="dummy">dummy</vendor>

    <depends>com.intellij.modules.lang</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!--<toolWindow id="Grep Viewer" icon="/network.png" anchor="bottom" factoryClass="actions.ExpressionToolWindow"></toolWindow>-->
        <consoleFilterProvider order="first" implementation="extension.ExpressionFilterProvider"/>
        <consoleActionsPostProcessor implementation="extension.ExpressionActionPostProcessor"/>
        <projectConfigurable id="MyConsole" instance="plugin.MyConfigurable" groupId="build"/>
        <projectService serviceInterface="plugin.MyConfigurable" serviceImplementation="plugin.MyConfigurable"/>
        <applicationConfigurable instance="plugin.MyConfigurable" groupId="build"></applicationConfigurable>
    </extensions>

    <actions>
        <group id="MyPlugin.SampleMenu" text="Greeting" description="Greeting menu">
            <add-to-group group-id="MainMenu" anchor="last"/>
            <action id="Myplugin.Textboxes" class="HelloAction" text="Hello" description="Says hello"/>
        </group>
        <group id="MyPlugin.Action" description="Open Panel">
            <add-to-group group-id="RunMenu" anchor="first"/>
            <action class="actions.ToolAction" text="Open panel"></action>
        </group>
        <!--<group id="MyPlugin.ConsoleAction" text="Please" description="work">-->
            <!--<add-to-group group-id="MainMenu" anchor="last"/>-->
            <!--<action id="Myplugin.Textboxes" class="actions.ConsoleAction" text="Hello" description="Says hello"/>-->
        <!--</group>-->
    </actions>

    <application-components>
        <component>
            <implementation-class>plugin.MyConfigurable</implementation-class>
        </component>
    </application-components>


</idea-plugin>